.row
  %h4 
    Family members (#{@relatives.size})
    - if @owner
      %a{href: "/edit?relative=true"}
        %button.btn-circle.btn.btn-primary{:type => "button"}
          %i.glyphicon.glyphicon-plus  
  - @relatives.order('updated_at desc').first(3).each do |relative|
    .col-md-4
      .panel.panel-default
        .panel-heading.preview
          = image_tag("/assets/default-family-member.jpg")
        .panel-body.text-center
          %strong= relative.fullname.capitalize
          %br
          = relative.relation.titleize          
  .clearfix        
  %strong= link_to "View more","/patient/#{@user.id}/relatives", class: 'pull-right'  if @relatives.length > 3
