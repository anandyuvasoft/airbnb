.row
  .col-md-3.text-center
    = image_tag avatar_url(@other), class: 'img-circle avatar-medium'
    %br/
    %strong= @other.fullname
    = link_to 'View Profile', @other, class: 'btn btn-default wide'
  .col-md-9
    .panel.panel-default
      .panel-heading
        Conversations with #{@other.fullname}
      .panel-body
        .container
          = form_for [@conversation, @conversation.messages.new], remote: true do |f|
            .form-group
              = f.text_area :content, placeholder: 'Add a personal message', |
                class: 'form-control'                                        |
            = f.hidden_field :user_id, value: current_user.id
            .actions
              = f.submit 'Send Message', class: 'btn btn-primary'
      #chat
        = render @messages, locals: {conversation: @conversation}
= subscribe_to conversation_messages_path(@conversation)
