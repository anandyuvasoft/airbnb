.row
  = render '/shared/sidebarnav'
  .col-md-9
    .panel.panel-default
      .panel-heading
        Your Trips
      .panel-body
        - @trips.each do |trip|
          .row
            .col-md-2
              = trip.start_date.strftime('%v')
            .col-md-6
              = link_to room_path(trip.room) do
                = image_tag trip.room.photos[0].image.url(:thumb)
            .col-md-2
              = link_to user_path(trip.room.user) do
                = image_tag avatar_url(trip.room.user), class: 'img-circle avatar-medium'
            .col-md-2.right
              %h4
                $#{trip.total}
          %hr/
