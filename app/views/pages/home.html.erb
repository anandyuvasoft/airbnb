<%= form_tag search_path, method: :get do %>
  <div class="row">
  <h1>Looking for a doctor? Enter your location to find the best near your:</h1>
    <div class="col-md-10 nopadding">
      <%= text_field_tag :search, params[:search], placeholder: 'Where are you going?', class: 'form-control' %>
    </div>
    
    <div class="col-md-2 nopadding">
      <%= submit_tag 'Search', :name => nil, class: 'btn btn-block btn-primary' %>
    </div>
  </div>
<% end %>

<br>

<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
        </div>
        <div class="panel-body">
          <%= image_tag avatar_url(room.user), class: 'img-circle avatar-small' %> &nbsp;
          <%= link_to room.listing_name, room %>
        </div>
      </div>
    </div>
  <% end %>
</div>

