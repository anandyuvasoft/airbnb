<div class="panel panel-default">
  <div class="panel-heading">
    Create Your Beautiful Place
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @room, html: {multipart: true} do |f| %>
        <div class="row">

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Home Type</label>
              <%= f.select :home_type, [['Apartment', 'Apartment'], ['House', 'House'], ['Bed & Breakfast',
                'Bed & Breakfast']], id: 'home_type', prompt: 'Select...', class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Room Type</label>
              <%= f.select :room_type, [['Entire', 'Entire'], ['Private', 'Private'], ['Shared',
                'Shared']], id: 'room_type', prompt: 'Select...', class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Accomodate</label>
              <%= f.select :accomodate, [['1', 1], ['2', 2], ['3',3]], id: 'accomodate',
              prompt: 'Select...', class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Bed Rooms</label>
              <%= f.select :bed_room, [['1', 1], ['2', 2], ['3', 3], ['4+', 4]], id: 'bed_room', prompt: 'Select...',
              class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Bath Rooms</label>
              <%= f.select :bath_room, [['1', 1], ['2', 2], ['3', 3], ['4+', 4]], id: 'bath_room', prompt: 'Select...',
              class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Listing Name</label>
            <%= f.text_field :listing_name, placeholder: 'Be clear and descriptive', class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Summary</label>
            <%= f.text_area :summary, rows: 5, placeholder: 'Tell the details about your place', class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, placeholder: 'Where is the location of your place', class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_tv %> TV
            </div>
            <div class="form-group">
              <%= f.check_box :is_kitchen %> Kitchen
            </div>
            <div class="form-group">
              <%= f.check_box :is_internet %> Internet
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <%= f.check_box :is_air %> Air Conditioning
            </div>
            <div class="form-group">
              <%= f.check_box :is_heating %> Heating
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Rate per Night</label>
              <div class="input-group">
                <div class="input-group-addon">$</div>
                <%= f.text_field :price, placeholder: 'eg. $100', class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                <%= icon('upload', 'Upload Photos', class:'fa-lg') %>
                <%= file_field_tag "images[]", type: :file, multiple: true %>
              </span>
            </div>
          </div>
        </div>

        <div id="photos">
          <%= render 'photos/list' %>
        </div>

        <div class="row">
          <div class="col-md-2">
            <div class="form-group">
              <%= f.check_box :active %> Active
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
