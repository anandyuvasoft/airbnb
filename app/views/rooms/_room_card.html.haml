.docprofile.box
  = render "rooms/ribbon"
  .panel-default
    .row
      .col-md-2.user-img
        = image_tag @photos[0].try(:image) ? @photos[0].image.url(:medium) : "/assets/missing-room.jpg", class: 'img-circle'
      .col-md-5
        %h3
          = link_to room_path(@room) do 
            = @room.name 
            , #{@room.degree}
          
          - if @owner
            %a{href: edit_room_path(personal: true) }
              %button.btn-circle.btn.btn-primary{:type => "button"}
                %i.glyphicon.glyphicon-edit  

        
        -#%span.small
          Address:
          = @room.address
        %h5
          Practice: #{@room.practice}
        %span
          trustmeter  
        .progress.search-progress
          .progress-bar.progress-bar-primary{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 20%"}
        -#%p
          = truncate(@room.biography,length: 30)
          = link_to "Read more", "javascript:void(0)", class: 'small'

        %h4
          %span#average_rating
          %span.review-doctor
            #{@reviews.count} Reviews
      .col-md-3
        %h5  #{@room.category}
        - if @room.price.present?
          %span.btn.btn-info.btn-xs
            Rate  
            $
            = @room.price
     
      .col-md-2.text-center.book-appointment
        - if !user_signed_in? || current_patient
          = link_to 'Book Appointment', bookings_path(room_id: @room.id), method: :post
        = render 'purchases/form_enterprise' if @owner && !@upgraded


- content_for :javascript do 
  :javascript
    $('#average_rating').raty ({
    readOnly: true,
    score: #{@room.average_rating}
    });

:css 
  .user-img img {
    width: 85px;
    height: 85px;
  }
  .docprofile h3 {
    margin: 0;
    padding:0 0 5px 0;
    color: #333;
  } 
  .docprofile h3 a {
    color: #333;
  }
  .panel-body.box {
    padding: 15px 0;
  }
  .docprofile.box {
     border: 1px solid #ddd;
     padding: 15px 0;
     border-radius: 4px;
  }
  .book-appointment a {
    display: block;
    font-size: 14px;
    font-weight: 600;
    margin-top: 20px;
  }
  .review-doctor {
    font-size: 12px;
  }
  .search-progress{
    margin-bottom: 0; 
    height: 9px;
    width: 70%;
  }