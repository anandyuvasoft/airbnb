- @owner = (current_user == @room.user) ? true : false

- @upgraded = (@room.is_upgraded?) ? true : false

.container
  .my-50

    = render "card"
    = render "profile"
    = render "photos"  
    = render "near_by"

    .panel.panel-default
      .panel-heading
        %i.fa.fa-map-marker{"aria-hidden" => "true"}
        = @room.address
      .panel-body.box
        #google_map{style: "height:600px;"}

  
- content_for :javascript do 
  :javascript
    showMap();
    function showMap() {
    var mapDiv = document.getElementById('google_map');
    var map = new google.maps.Map(mapDiv, {center: {lat: #{ @room.latitude }, lng: #{ @room.longitude }},zoom: 15});
    var marker = new google.maps.Marker({position: {lat: #{ @room.latitude }, lng: #{ @room.longitude }}, title: "#{ @room.practice }" });
    marker.setMap(map);

    }

