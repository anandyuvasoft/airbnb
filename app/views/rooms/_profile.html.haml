.panel.panel-default

  .row
    .col-md-12

      .row
        .col-md-6
          %h3 
            Educations
            - if @owner
              %a{href: edit_room_path(education: true) }
                %button.btn-circle.btn.btn-primary{:type => "button"}
                  %i.glyphicon.glyphicon-plus  


        .col-md-6
          %h3 
            Conditions
            - if @owner
              %a{href: edit_room_path(condition: true) }
                %button.btn-circle.btn.btn-primary{:type => "button"}
                  %i.glyphicon.glyphicon-plus  


      .row    
        .col-md-6
          %h3 
            Insurances
            - if @owner
              %a{href: edit_room_path(insurance: true) }
                %button.btn-circle.btn.btn-primary{:type => "button"}
                  %i.glyphicon.glyphicon-plus              


        .col-md-6
          %h3 
            Procedures
            - if @owner
              %a{href: edit_room_path(procedure: true) }
                %button.btn-circle.btn.btn-primary{:type => "button"}
                  %i.glyphicon.glyphicon-plus              

      .row    
        .col-md-8
          %h3 
            Languages
            - if @owner
              %a{href: edit_room_path(language: true) }
                %button.btn-circle.btn.btn-primary{:type => "button"}
                  %i.glyphicon.glyphicon-plus  

        .col-md-8
          %h3
            Reviews
            %span#average_rating
            (#{@reviews.count})
  

          = render 'reviews/form' if @booked && !@hasReview
          = render 'reviews/list'

