.panel.panel-default.docprofile
  .panel-defaultpanel-body

    .row.box
      - if @upgraded
        .ribbon
          %span Featured

      .col-md-12
        .col-md-8.nopadding

          .col-md-3
            .image-cropper
              = image_tag @photos[0].image.url(), class: 'img-responsive rounded' if @photos.length > 0

          .col-md-9
            %h3
              = @room.listing_name
              , #{@room.degree}
              
              - if @owner
                %a{href: edit_room_path(personal: true) }
                  %button.btn-circle.btn.btn-primary{:type => "button"}
                    %i.glyphicon.glyphicon-plus  

            %h6= @room.category
            %h5
              Practice: #{@room.practice}
            .small= @room.address  
            %p
              = truncate(@room.biography,length: 50)
              = link_to "Read more", "javascript:void(0)", class: 'small'

            %h4
              Reviews
              %span#average_rating
              (#{@reviews.count})

        .col-md-4

          - if !@owner
            = link_to 'Book An Appointment', booking_steps_path(room_id: @room.id), class: 'btn btn-block btn-primary'
          - else 
            = render 'purchases/form_enterprise' if !@upgraded
